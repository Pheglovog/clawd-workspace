{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_"
    }],
    "no-console": "off",
    "no-undef": "error",
    "no-redeclare": "error",
    "no-duplicate-imports": "warn",
    "prefer-const": "warn",
    "comma-dangle": ["error", "always-multiline"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-function-paren": ["error", "never"],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "space-infix-ops": "error",
    "no-multiple-empty-lines": ["error", {
      "max": 1
    }]
  }
}
